{% extends 'base.html.twig' %}
{% block title %}List Recipes{% endblock %}
{% block body %}
    {% if recipes %}
       <table id="recipes" class="table table-striped">
         <thead>
         <tr>
             <th>Title</th>
             <th>Summary</th>
             <th>Author</th>
             <th>Actions</th>
         </tr>
         </thead>
         <tbody>

         {% for recipe in recipes %}
            <tr>
                <td>{{ recipe.title }}</td>
                <td>{{ recipe.summary }}</td>
                <td>{{ recipe.author }}</td>
                <td><a href="/default/{{ recipe.id }}" class="btn btn-success">Show</a>
                <a href="/default/editrecipe{{ recipe.id }}" class="btn btn-secondary">Edit</a>
                <a href="#" class="btn btn-danger delete-recipe" data-id="{{ recipe.id }}">Delete</a>
                </td>
            </tr>
         {% endfor %}
         </tbody>
    {% else %}
    <p>Nothing to show</p>
    {% endif %}

{% endblock %}

           {% block javascripts %}
           <script src="/js/main.js"></script>
           {% endblock %}